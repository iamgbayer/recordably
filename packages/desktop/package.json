{
  "name": "@recordably/desktop",
  "description": "An open-source, minimalist, screenshot and screen GIF recorder built with web technology.",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/iamgbayer/recordably.git"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/electron": "^1.6.10",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.13",
    "@types/ramda": "^0.27.4",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-rnd": "^8.0.0",
    "@types/styled-components": "^5.1.5",
    "blob-to-buffer": "^1.2.8",
    "cross-env": "^7.0.2",
    "dayjs": "^1.9.7",
    "electron-is-dev": "^1.2.0",
    "gif-encoder-2": "^1.0.5",
    "jimp": "^0.14.0",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-rnd": "^10.1.10",
    "react-scripts": "4.0.1",
    "styled-components": "^5.1.0",
    "styled-tools": "^1.7.1",
    "typescript": "^4.1.3"
  },
  "author": {
    "name": "Guilherme Bayer",
    "email": "iamgbayer@gmail.com",
    "url": "https://twitter.com/iamgbayer"
  },
  "build": {
    "appId": "com.recordably",
    "productName": "recordably",
    "extends": null,
    "directories": {
      "buildResources": "icons",
      "output": "dist"
    },
    "files": [
      "icons",
      "build"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "icon.png"
    },
    "win": {
      "icon": "icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "desktop": {
        "MimeType": "x-scheme-handler/recordably;"
      },
      "icon": "icon.png",
      "target": [
        {
          "target": "AppImage"
        }
      ]
    }
  },
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"cross-env PORT=3006 BROWSER=none react-scripts start\" \"wait-on http://localhost:3006 && electron --enable-transparent-visuals .\"",
    "build": "react-scripts build && yarn electron-builder",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "concurrently": "^5.2.0",
    "electron": "8.2.3",
    "electron-builder": "^22.9.1",
    "eslint-config-prettier": "^6.0.0",
    "wait-on": "^4.0.2"
  }
}
